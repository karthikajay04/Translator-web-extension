{
  "manifest_version": 3,
  "name": "AI Translator Extension (Upgraded)",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://localhost:5001/*",
    "*://*.youtube.com/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/content/pageTranslate.js",
        "src/content/youtubeTranslate.js",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "use_dynamic_url": false
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Open translator popup"
    }
  }
}